<h1>待辦清單</h1>

<table  class="table">
  <thead>
    <tr>
        <td>事項</td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
    <td class="text-light bg-dark"><%= task.name%></td>
    <td><%= link_to "檢視", task_path(task), class:"btn btn-primary" %>
    <%= link_to "編輯", edit_task_path(task), class:"btn btn-success" %>
    <%= link_to "刪除", task_path(task), method: "delete", data:{ confirm: "確認刪除嗎"},class:"btn btn-danger"%>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>

 <%= link_to "新建清單", new_task_path, class:"btn btn-warning" %>
